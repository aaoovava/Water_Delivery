<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#51E2F8E9"
    tools:context=".Second2Fragment">

    <Button
        android:id="@+id/button_first1"
        android:layout_width="162dp"
        android:layout_height="123dp"
        android:text="Букет"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.935"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.315" />

    <Button
        android:id="@+id/buttonSecond"
        style="@style/Widget.MaterialComponents.MaterialCalendar.Day.Today"
        android:layout_width="162dp"
        android:layout_height="123dp"


        android:text="березова"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.112"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.315" />

    <TextView
        android:id="@+id/textView5"

        android:layout_width="180dp"
        android:layout_height="84dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="116dp"
        android:padding="12dp"
        android:shadowColor="#373A4E"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="5"
        android:text="Розливна"
        android:textAlignment="viewEnd"
        android:textAllCaps="false"
        android:textColor="#498FAF"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>