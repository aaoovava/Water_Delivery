<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="auto"

    android:foregroundGravity="center"

    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="75dp"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:elevation="100dp"
        app:layout_constraintEnd_toEndOf="@+id/button4"
        app:layout_constraintTop_toTopOf="@+id/button4"
        app:srcCompat="@drawable/ic_dashboard_black_24dp" />

    <Button
        android:id="@+id/button3"
        style="@style/systemButtonStyle"
        android:layout_width="179dp"
        android:layout_height="137dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="20dp"
        android:foregroundTint="#120707"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:stateListAnimator="@android:anim/accelerate_decelerate_interpolator"
        android:text="@string/title_activity_main2"
        app:circularflow_defaultRadius="32dp"
        app:circularflow_radiusInDP="32dp"
        app:cornerRadius="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        style="@style/systemButtonStyle"
        android:layout_width="179dp"
        android:layout_height="137dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="220dp"
        android:foregroundTint="#120707"
        android:text="3"
        app:circularflow_defaultRadius="32dp"
        app:circularflow_radiusInDP="32dp"
        app:cornerRadius="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button5"
        style="@style/systemButtonStyle"
        android:layout_width="179dp"
        android:layout_height="137dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="20dp"
        android:foregroundTint="#120707"
        android:text="4"
        app:circularflow_defaultRadius="32dp"
        app:circularflow_radiusInDP="32dp"
        app:cornerRadius="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button4"
        style="@style/systemButtonStyle"
        android:layout_width="179dp"
        android:layout_height="137dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="220dp"
        android:foregroundTint="#120707"
        android:text="1"
        app:circularflow_defaultRadius="32dp"
        app:circularflow_radiusInDP="32dp"
        app:cornerRadius="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>