<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="auto"
    tools:context=".MainActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/menuWater"
        android:layout_width="410dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:tabIconTint="@color/black"
        app:tabIconTintMode="add"
        app:tabIndicatorColor="@color/teal_700"
        app:tabIndicatorHeight="3.9dp"
        app:tabTextColor="@color/purple_700">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/alaska"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isScrollContainer="true"
            android:text="Аляска"
            android:textAlignment="textEnd"
            android:tintMode="add" />


        <com.google.android.material.tabs.TabItem
            android:id="@+id/mirhgorodska"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Миргородська"
            tools:ignore="ImageContrastCheck" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/akvasolo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Аквасоло"
            tools:ignore="ImageContrastCheck" />
    </com.google.android.material.tabs.TabLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/png_transparent_justice_rule_according_to_higher_law_equity_theory_scale_icon_angle_triangle_logo_thumbnail_depositphotos_bgremover__1_"
        tools:ignore="SpeakableTextPresentCheck" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/stat_sys_phone_call"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>